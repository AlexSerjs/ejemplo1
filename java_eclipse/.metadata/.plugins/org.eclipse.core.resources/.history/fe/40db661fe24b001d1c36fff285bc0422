package es.iesclaradelrey.dm1e.primerTrimestre.ut4.ejercicios;

import javax.swing.JOptionPane;

public class Ejercicio5_Condicionales {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		JOptionPane.showMessageDialog(null, "Bienvenido Iniciar Secion");
		
		String usuario=JOptionPane.showInputDialog("Usuario");
		String contrasenia=JOptionPane.showInputDialog("Contrase√±a");
		
		String nom="pepe";
		String cod="asdasd";
		
		
		if (usuario.equals(nom)&&contrasenia.equals(cod)) {
			
			JOptionPane.showMessageDialog(null, "Has Entrado al Sistema");
			
		}
		else {
			JOptionPane.showMessageDialog(null, "Acceso Denegado", null,JOptionPane.ERROR_MESSAGE);
		}

	}

}
