package es.iesclaradelrey.dm1e.primerTrimestre.ut3.ejercicios;

import javax.swing.JOptionPane;

public class ut3_Ejercicio06 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String radio= JOptionPane.showInputDialog("Escribe el radio !! ");
		String nombre= JOptionPane.showInputDialog("Escribe tu nombre !!");
		String lado= JOptionPane.showInputDialog("Escribe un lado de uin Cuadrado !!");
		
		
		double radio2= Double.parseDouble(radio);
		double perimetro=2*Math.PI*radio2;
		
		double lado2 =Double.parseDouble(lado);
		double area = Math.pow(lado2, 2);
		
		
		JOptionPane.showMessageDialog(null, "Hola "+nombre+". El cuadrado tiene un área de "+area+" y la circunferencia tiene un perímetro de "+perimetro);
		
		
		
		

	}

}
