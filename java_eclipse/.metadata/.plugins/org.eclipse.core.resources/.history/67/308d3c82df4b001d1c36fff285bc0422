package es.iesclaradelrey.dm1e.primerTrimestre.ut4.ejercicios;

import java.util.Scanner;

public class Ejercicio10_Condicionales {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc= new Scanner(System.in);
		System.out.print("Escribe el dia: ");
		int dia = sc.nextInt();
		System.out.print("Escribe el mes: ");
		int mes = sc.nextInt();
		System.out.print("Escribe el anio: ");
		int anio = sc.nextInt();
		
		System.out.println(dia+" - "+mes+" - "+anio);
		switch (mes) {
		case 1,3,5,7,8,10,12:
			if (dia>0||dia<31) {
				System.out.print("la Fecha es corecta");
				
			}
		else {
			System.out.println("fecha DIA INCORRECTA");
		}
		break;
		case 2
		if (dia>0||dia<31) {
			System.out.print("la Fecha es corecta");
			
		}
	else {
		System.out.println("fecha DIA INCORRECTA");
	}
	break;
		

		default:
			break;
		}
		

	}

}
